@model IEnumerable<string>
<!-- получение названия текущей группы из запроса -->
 @{var txt = Request.RequestContext.RouteData.Values["type"] ?? "Все жанры";}

<h3>Выберите жанр книги</h3>
<div class="btn-group">
	<button type="button" class="btn btn-default">@txt</button>
	<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
		<!-- первый элемент в списке - Все группы -->
		<li>
			<a href="@Url.Action("List","Book")">
				Все группы
			</a>
		</li>
		<!-- формирование остального списка --> @{
			foreach (var item in Model)
			{
				<li>
					<a href="@Url.Action("List","Book",new {type=item})">
						@item
					</a>
				</li>
			} }
	</ul>
</div>
