
@{
	ViewBag.Title = "Главная страница";

}

<div class="col-md-9">
	<h2>Список</h2>
	<ol type="A">
		@for (int i = 1; i < 5; i++)
		{
			<li>Элемент @i списка</li>
		}

	</ol>

	<hr> <!--разделитель-->
	<h2>Форма</h2>
	@*<form class="form-horizontal" role="form" method="get">*@
	@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-horizontal" }))
	{
		<div class="form-group">
			<div class="col-md-8 col-md-offset-3"> @Html.DropDownList("Colors") </div>
			<div class="col-md-offset-2 col-md-8">
				<div class="checkbox">
					@*<label><input name="Checkbox-1" type="checkbox" value="checkbox-1">Checkbox-1</label>*@
					<label>
						@Html.CheckBox("cBox1")Checkbox - 1
					</label>
				</div>
				<div class="checkbox">
					@*<label><input name="Checkbox-2" type="checkbox" value="checkbox-2">Checkbox-2</label>*@
					<label>
						@Html.CheckBox("cBox1")Checkbox - 2
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-8">
				@*<label class="radio-inline"><input type="radio" name="optradio" checked value="1">Radio-1</label>
					<label class="radio-inline"><input type="radio" name="optradio" value="2">Radio-2</label>*@
				<label>@Html.RadioButton("rButton", 1, true) Radio-1</label>
				<label>@Html.RadioButton("rButton", 2, false) Radio-2</label>
			</div>
		</div>



		<div class="form-group">
			<label for="inputLogin" class="col-md-2 control-label">Логин</label>

			<div class="col-md-8">
				@*<input name="login" type="text" class="form-control" id="inputLogin" placeholder="Введите логин" required min="8">*@
				@Html.TextBox("login", null, new
				{
					@class = "form-control",
					placeholder = "Введите логин"
				})
			</div>
		</div>
		<div class="form-group">
			<label for="inputPassword3" class="col-md-2 control-label">Пароль</label>
			<div class="col-md-8">
				@*<input name="password" type="password" class="form-control" id="inputPassword3" placeholder="Введите пароль">*@
				@Html.Password("password", null, new
				{
					@class = "form-control",
					placeholder = "Введите пароль"
				})
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-8">
				<button type="submit" class="btn btn-default">Отправить</button>
			</div>
		</div>
	}
	@*</form>*@
</div>

